menuconfig BR2_PACKAGE_MENU_LVGL
	bool "LVGL"
	depends on BR2_INSTALL_LIBSTDCPP
	depends on BR2_TOOLCHAIN_GCC_AT_LEAST_8
	depends on BR2_HOST_GCC_AT_LEAST_8
	select BR2_PACKAGE_LVGL
	help
		LVGL: Light and Versatile Graphics Library

		https://github.com/MainForm/buildroot_lvgl_package


if BR2_PACKAGE_MENU_LVGL

config BR2_PACKAGE_LVGL
	bool "LVGL v9.2.2"
	help
		LVGL: Light and Versatile Graphics Library

		https://github.com/MainForm/buildroot_lvgl_package

comment "LVGL graphic Platform"

config BR2_PACKAGE_LVGL_USE_DRM
	bool "DRM support"
	depends on BR2_PACKAGE_LIBDRM
	help
		LVGL use libdrm to draw window

comment "LVGL input library"

config BR2_PACKAGE_LVGL_USE_LIBINPUT
	bool "libinput support"
	depends on BR2_PACKAGE_LIBINPUT
	help
		LVGL use libinput for input device like mouse and keyboard

endif
